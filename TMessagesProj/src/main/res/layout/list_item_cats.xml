<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/box2"
    android:layout_marginBottom="@dimen/key_line_4"
    android:layout_marginEnd="@dimen/key_line_8"
    android:layout_marginLeft="@dimen/key_line_8"
    android:layout_marginRight="@dimen/key_line_8"
    android:layout_marginStart="@dimen/key_line_8"
    android:layout_marginTop="@dimen/key_line_4"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="6">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical">


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:gravity="center_vertical|right"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:layout_marginRight="10dp"
                android:layout_weight="6"
                android:gravity="center_vertical|right"
                android:padding="5dp"
                android:textSize="16sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/cover"
            android:layout_width="@dimen/toolbar_height2"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/file_g" />


    </LinearLayout>

</android.support.v7.widget.CardView><!-- android:drawSelectorOnTop="true" selectableItemBackgroundBorderless -->